  <% if @publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
      <% @publication.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="control-group">
    <%= f.label :name, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class=>"m-wrap medium", :placeholder=>"Publication Internal Name" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_area :description, :class=>"m-wrap large", :placeholder=>"Publication Internal Description", :rows => 2 %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span8" data-tablet="span12" data-desktop="span8">
      <%= f.label :pub_image, :class=>"control-label" %>
      <div class="control-group">
        <div class="controls">
           <div class="fileupload fileupload-new" data-provides="fileupload">
              <div class="fileupload-new thumbnail" style="width: 600px; height: 600px;">
                 <img src="<%= !@publication.pub_image.file? ? "http://www.placehold.it/600x600/EFEFEF/AAAAAA&amp;text=no+image" : @publication.pub_image.url()%>" alt="" />
              </div>
              <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 600px; max-height: 600px; line-height: 20px;"></div>
              <div>
                 <span class="btn btn-file"><span class="fileupload-new">Select image</span>
                 <span class="fileupload-exists">Change</span>
                    <%= f.file_field :pub_image, :class => 'default' %>
                  </span>
                 <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
              </div>
           </div>
        </div>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :pub_title, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :pub_title, :class=>"m-wrap medium", :placeholder=>"Publication Title" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :pub_bio, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_area :pub_bio, :class=>"m-wrap large", :placeholder=>"Publication Content", :rows => 4 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :pub_date, :class=>"control-label" %>
    <div class="controls">
      <div class="input-append date date-picker" data-date="01/01/2013" data-date-format= "dd/mm/yyyy" data-date-viewmode="years">
        <%= f.text_field :pub_date, :class => 'm-wrap m-ctrl-medium date-picker'%><span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :publication_type_id, :class=>"control-label" %>
    <div class="controls">
      <%= f.collection_select(:publication_type_id, PublicationType.all, :id, :name) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :designer_user_id, :class=>"control-label" %>
    <div class="controls">
      <%= f.collection_select(:designer_user_id, @possible_users, :id, :email) %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.button :type=>"submit", :class=>"btn green" %>
    <%= link_to 'Back', dashboard_path(1), :class=>"btn" %>
  </div>