<%= form_for(@user, :html => { :class => "form-horizontal"}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :email, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :email, :class=>"m-wrap medium", :placeholder=>"User Email" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class=>"control-label" %>
    <div class="controls">
      <%= f.password_field :password, :class=>"m-wrap medium", :placeholder=>"User Password" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :type=>"submit", :class=>"btn green" %>
    <%= link_to 'Back', users_path, :class=>"btn" %>
  </div>
<% end %>
