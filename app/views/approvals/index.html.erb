<h1>Listing approvals</h1>

<table>
  <tr>
    <th>Approval date</th>
    <th>User</th>
    <th>Decision</th>
    <th>Publication</th>
    <th>Observations</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @approvals.each do |approval| %>
  <tr>
    <td><%= approval.approval_date %></td>
    <td><%= approval.user_id %></td>
    <td><%= approval.decision %></td>
    <td><%= approval.publication_id %></td>
    <td><%= approval.observations %></td>
    <td><%= link_to 'Show', approval %></td>
    <td><%= link_to 'Edit', edit_approval_path(approval) %></td>
    <td><%= link_to 'Destroy', approval, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

