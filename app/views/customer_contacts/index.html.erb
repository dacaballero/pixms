<% @customer_contacts.each do |customer_contact| %>
  <tr>
    <td><%= customer_contact.first_name %></td>
    <td><%= customer_contact.last_name %></td>
    <td><%= customer_contact.contact_category_id %></td>
    <td><%= customer_contact.position %></td>
    <td><%= customer_contact.bio %></td>
    <td><%= link_to 'Show', customer_contact %></td>
    <td><%= link_to 'Edit', edit_customer_contact_path(customer_contact) %></td>
    <td><%= link_to 'Destroy', customer_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

