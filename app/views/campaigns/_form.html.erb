<%= form_for(@campaign, :url => customer_campaigns_path(@campaign.customer_id), :html => { :class => "form-horizontal"}) do |f| %>
  <% if @campaign.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this customer_campaign from being saved:</h2>

      <ul>
      <% @campaign.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="control-group">
    <%= f.label :avatar, :class=>"control-label" %>
    <div class="controls">
       <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
             <img src="<%= !@campaign.avatar.file? ? "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" : @campaign.avatar.url(:medium)%>" alt="" />
          </div>
          <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;"></div>
          <div>
             <span class="btn btn-file"><span class="fileupload-new">Select image</span>
             <span class="fileupload-exists">Change</span>
                <%= f.file_field :avatar, :class => 'default' %>
              </span>
             <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
          </div>
       </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :name, :class=>"m-wrap medium", :placeholder=>"Campaign Name" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :date_start, :class=>"control-label" %>
    <div class="controls">
      <div class="input-append date date-picker" data-date="01/01/2013" data-date-format= "dd/mm/yyyy" data-date-viewmode="years">
        <%= f.text_field :date_start, :class => 'm-wrap m-ctrl-medium date-picker'%><span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :date_ent, :class=>"control-label" %>
    <div class="controls">
      <div class="input-append date date-picker" data-date="01/01/2013" data-date-format= "dd/mm/yyyy" data-date-viewmode="years">
        <%= f.text_field :date_ent, :class => 'm-wrap m-ctrl-medium date-picker'%><span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :initial_budget, :class=>"control-label" %>
    <div class="controls">
      <%= f.text_field :initial_budget, :class=>"m-wrap medium", :placeholder=>"Initial Budget of the Campaign" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :approval_process_id, :class=>"control-label" %>
    <div class="controls">
      <%= f.collection_select(:approval_process_id, @possible_approval_processes, :id, :name) %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.button :type=>"submit", :class=>"btn green" %>
    <%= link_to 'Back', dashboard_path(1), :class=>"btn" %>
  </div>
<% end %>
